<h1>Podcast: <%= @episode.podcast.name %></h3>
<h2>Episode: <%= @episode.title %></h4>

<% unless @episode.notes.empty? %>
  <h3>Notes:</h3>
  <ul>
    <% @episode.notes.each do |note| %>
      <li><%= note.content %></li>
    <% end %>
  </ul>
<% end %>

<%= link_to "Add a note", "/episodes/#{@episode.id}/notes/new" %>